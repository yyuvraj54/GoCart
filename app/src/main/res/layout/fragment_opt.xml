<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Auth.optFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbOtpFrag"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_yellow"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="OTP verification" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:background="#B3B2B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbOtpFrag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikblack"
            android:text="We have sent a verification codee to" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rubikblack"
            android:layout_height="wrap_content"
            android:text="+91" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/code2"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/code3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />
            <EditText
                android:id="@+id/code4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />
            <EditText
                android:id="@+id/code5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/code6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/box_border"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/OtploginBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:layout_marginTop="25dp"
            android:text="Login" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>