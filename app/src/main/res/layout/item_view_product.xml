<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:orientation="vertical">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/ivImageSlider"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        app:iss_auto_cycle="false"
        app:iss_text_align="CENTER" />

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="19.50sp"
                android:textColor="@color/black"
                android:fontFamily="@font/rbsb"
                android:text="Fresh Milk , oil free ad sksir dkfldi dsssas "/>

            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="19.50sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/rbsb"
                android:text="5060ml"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llproductCount"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="78sp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="@+id/tvAdd"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/tvDecrementCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:fontFamily="@font/rubikblack"
                            android:text="-" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:layout_marginHorizontal="10dp"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tvIncrementCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:fontFamily="@font/rubikblack"
                            android:text="+" />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/rbsb"
                        android:maxLines="1"
                        android:text="120"
                        android:textColor="@color/grey"
                        android:textSize="19.50sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/tvAdd"
                        android:layout_width="78sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rbsb"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="@color/green"
                        android:textSize="19.50sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>