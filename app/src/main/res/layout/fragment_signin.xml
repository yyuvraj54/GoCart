<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Auth.signinFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/loginback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubikblack"
                    android:textColor="#419CCB"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="35dp"
                    android:text="Hi! good to see\nyou Again" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="@font/rbsb"
                    android:textAlignment="center"
                    android:layout_marginTop="55dp"
                    android:textColor="#C6D6E6"
                    android:text="we will send an sms with a verification \ncode on this number "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/PhoneNumber"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_input"
                    android:drawableLeft="@drawable/phone_24"
                    android:ems="10"
                    android:fontFamily="@font/rbsb"
                    android:hint="Phone"
                    android:layout_marginTop="15dp"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:paddingHorizontal="10dp" />

                <Button
                    android:id="@+id/SignupBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint = "@color/blue"
                    android:text="Continue"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>